<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    android:paddingHorizontal="5dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Expense Type"
        android:textColor="@color/black"
        android:textSize="18dp" />


    <RadioGroup
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_marginRight="80dp"
            android:layout_weight="1"
            android:id="@+id/general"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="   General"
            android:checked="false"
            android:textSize="16dp" />

        <RadioButton
            android:layout_weight="1"
            android:id="@+id/incurred"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="   Incurred"
            android:checked="false"
            android:textSize="16dp" />
    </RadioGroup>



    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/amount"
        android:background="@drawable/rectanglebutton"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="2dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:editable="false"
        android:hint="Amount of expense"
        android:inputType="phone"
        android:singleLine="true" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/description"
        android:background="@drawable/rectanglebutton"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="2dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:maxLines="7"
        android:lines="7"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:gravity="start"
        android:editable="false"
        android:hint="Description"
        android:inputType="textMultiLine" />


    <Button
        android:id="@+id/selectProperty"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectanglebutton"
        android:backgroundTint="@color/propdarkblue"
        android:text="Select Property"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/date_incurred"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectanglebutton"
        android:backgroundTint="@color/propdarkblue"
        android:text="Date Incurred"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/saveExpense"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectanglebutton"
        android:backgroundTint="@color/propdarkblue"
        android:text="Save Expense"
        android:textAllCaps="false"
        android:textColor="@color/white" />


</LinearLayout>