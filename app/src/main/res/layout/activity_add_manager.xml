<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp"
            app:cardCornerRadius="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_marginTop="70dp"
                    android:id="@+id/dfsafdasd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Add A Manager"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/textVidew3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="Managers"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/sotwo"
                            style="@style/parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:paddingHorizontal="10dp"
                            app:hintTextColor="@color/formtwocolor">

                            <EditText
                                android:id="@+id/managerfirstname"
                                style="@style/modifiedEditText"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:backgroundTint="@color/white"
                                android:hint="First Name"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textColorHint="@color/white"
                                android:textCursorDrawable="@null"
                                android:textSize="15dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/soone"
                            style="@style/parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:paddingHorizontal="10dp"
                            app:hintTextColor="@color/formtwocolor">

                            <EditText
                                android:id="@+id/managerlastname"
                                style="@style/modifiedEditText"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:backgroundTint="@color/white"
                                android:hint="Last Name"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textColorHint="@color/white"
                                android:textCursorDrawable="@null"
                                android:textSize="15dp" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/asdfasdfasdfds"
                        style="@style/parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangle"
                        android:paddingHorizontal="10dp"
                        app:hintTextColor="@color/formtwocolor"
                        app:passwordToggleDrawable="@drawable/custom_password_eye"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/manageremail"
                            style="@style/modifiedEditText"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:backgroundTint="@color/white"
                            android:hint="Email"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/white"
                            android:textCursorDrawable="@null"
                            android:textSize="15dp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputPassword_second"
                        style="@style/parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangle"
                        android:paddingHorizontal="10dp"
                        app:hintTextColor="@color/formtwocolor"
                        app:passwordToggleDrawable="@drawable/custom_password_eye"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/managerpassword"
                            style="@style/modifiedEditText"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:backgroundTint="@color/white"
                            android:hint="Type Password"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/white"
                            android:textCursorDrawable="@null"
                            android:textSize="15dp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputPasswssadfaord_second"
                        style="@style/parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangle"
                        android:paddingHorizontal="10dp"
                        app:hintTextColor="@color/formtwocolor"
                        app:passwordToggleDrawable="@drawable/custom_password_eye"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/managerconfirmpassword"
                            style="@style/modifiedEditText"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:backgroundTint="@color/white"
                            android:hint="Retype Password"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/white"
                            android:textCursorDrawable="@null"
                            android:textSize="15dp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/managerassignhouse"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rectanglebutton"
                        android:backgroundTint="#666666"
                        android:gravity="center"
                        android:text="Assign House"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/managercreateAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/rectanglebutton"
                        android:backgroundTint="@color/propdarkblue"
                        android:text="Create Manager"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />


                    <TextView
                        android:id="@+id/dsf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginVertical="10dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>




</androidx.core.widget.NestedScrollView>
