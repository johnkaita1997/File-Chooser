<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLayout"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="@color/transparent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Launchers.WelcomeOneActivity">


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/month_picker_button"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rectanglebutton"
            android:backgroundTint="@color/propdarkblue"
            android:text="Rent Paid"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/general_incurred_btn"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/month_picker_button"
            android:background="@drawable/rectanglebutton"
            android:backgroundTint="@color/propdarkblue"
            android:text="Month"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </RelativeLayout>



    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/epoxyRecyclerview"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>