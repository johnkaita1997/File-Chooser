<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/freetowatchLinearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rectangle_8"
        android:layout_marginHorizontal="0dp"
        android:layout_marginBottom="10dp"
        android:background="#e6e6e6"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e6e6e6"
            android:orientation="vertical">



            <LinearLayout
                android:background="@drawable/mathteacher"
                android:id="@+id/subjectbackgroundlinearLayout"
                android:paddingVertical="20dp"
                android:paddingHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/youtube_player_view"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Form One -->
                <ImageView
                    android:src="@drawable/playasset"
                    android:textAllCaps="true"
                    android:id="@+id/subjectimage"
                    style="@style/form_one"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Form 1" />


                <TextView
                    android:layout_weight="1"
                    android:backgroundTint="@color/formtwocolor"
                    android:background="@drawable/rectanglebutton"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:text="Watch For Free"
                    android:padding="5dp"/>

            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>