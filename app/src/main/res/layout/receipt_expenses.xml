<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:elevation="20dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:background="@color/propbrownligt"
        android:id="@+id/receipt_expenses_LinearLayout"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/expenseDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="January 14, 2023"
            android:textColor="@color/black"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/expensereceiptNoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="1743824|JKLGT"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/expenseAmountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Amount Paid : KES 50,000"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/propertyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Thigiri Ridge Proptery"
            android:textColor="@color/black"
            android:textSize="15dp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>