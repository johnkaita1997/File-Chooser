<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/rectangle_8"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/rectangleeight"
                    android:backgroundTint="@color/formtwocolor" />

                <!-- Rectangle 9 -->
                <ImageView
                    android:id="@+id/backbutton"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/tafalogowhite" />

                <TextView
                    android:id="@+id/good_mornin"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="36dp"
                    android:gravity="center_horizontal"
                    android:textAllCaps="true"
                    android:text="My Profile"
                    android:textAppearance="@style/good_mornin" />

                <!-- Rectangle 9 -->
                <View
                    android:id="@+id/settingsImageviewprofile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/menumenu"
                    android:backgroundTint="@color/white" />

            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rectangle_8"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="#e6e6e6"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="visible"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e6e6e6"
                    android:orientation="vertical">

                    <!-- SJ -->
                    <TextView
                        android:id="@+id/sj1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="10dp"
                        android:background="@color/formtwocolor"
                        android:gravity="center"
                        android:text="MY PERSONAL INFORMATION"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e6e6e6"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView

                            android:id="@+id/sja2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="1"
                            android:background="#e6e6e6"
                            android:gravity="left"
                            android:text="Name : "
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/myname"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="1"
                            android:background="#f2f2f2"
                            android:gravity="left"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="3dp"
                            android:text=""
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="15dp"
                        android:background="@color/grey_40" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e6e6e6"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/sj3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="School : "
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/myschool"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="1"
                            android:background="#f2f2f2"
                            android:gravity="left"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="3dp"
                            android:text=""
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="15dp"
                        android:background="@color/grey_40" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e6e6e6"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/sj4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="County : "
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/mycounty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="1"
                            android:background="#f2f2f2"
                            android:gravity="left"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="3dp"
                            android:text=""
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="15dp"
                        android:background="@color/grey_40" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e6e6e6"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/paulo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Phone : "
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/myphone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="1"
                            android:background="#f2f2f2"
                            android:gravity="left"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="3dp"
                            android:text=""
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="15dp"
                        android:background="@color/grey_40" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e6e6e6"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/sjgtre6w"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Joining Date : "
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/myjoiningdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="1"
                            android:background="#f2f2f2"
                            android:gravity="left"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="3dp"
                            android:text=""
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="15dp"
                        android:background="@color/grey_40" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rectangle_8"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:background="#e6e6e6"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="visible"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- SJ -->
                    <TextView
                        android:id="@+id/sj7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="10dp"
                        android:background="@color/formtwocolor"
                        android:gravity="center"
                        android:text="MY TRANSACTIONS"
                        android:textColor="@color/white"
                        android:textSize="16dp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/userprofiledetailsrecyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:paddingBottom="10dp"
                        android:scrollbars="vertical" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <com.github.ybq.android.spinkit.SpinKitView
            android:layout_centerInParent="true"
            android:layout_marginBottom="50dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/yourvideos_spin_kit"
            style="@style/SpinKitView.ChasingDots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/formtwocolor" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
